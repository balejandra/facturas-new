<?xml version="1.0" encoding="UTF-8"?>
<view>
    <columns>
        <column name="id" display="left" order="100">
            <widget type="text" fieldname="id" readonly="true"/>
        </column>
        <column name="Divisa Destino" display="left" order="120">
            <widget type="text" fieldname="coddivisadestino" maxlength="3" required="true"/>
        </column>
        <column name="Divisa Origen" display="left" order="110">
            <widget type="text" fieldname="coddivisaorigen" maxlength="3" required="true"/>
        </column>
        <column name="name" display="" order="130">
            <widget type="text" fieldname="nombre" maxlength="100"/>
        </column>
        <column name="Tasa" display="right" order="140">
            <widget type="number" fieldname="tasacambio" max="0" min="0" step="0" required="true"/>
        </column>
        <column name="creation-date" display="none" order="150">
            <widget type="datetime" fieldname="creationdate" required="true"/>
        </column>
        <column name="user" order="160">
            <widget type="select" fieldname="nickusuario" >
                <values source="users" fieldcode="nick" filedtile="nick"/>
            </widget>
        </column>
        <column name="last-update" display="right" order="170">
            <widget type="datetime" fieldname="lastupdate"/>
        </column>
    </columns>
</view>
